---
type Props = {
    title: string;
}
const { title } = Astro.props;

---

<h1 id="_top" class="flex flex-row gap-2 items-center">
    {title}
</h1>

<style>
	h1 {
		margin-top: 1rem;
		font-size: var(--sl-text-h1);
		line-height: var(--sl-line-height-headings);
		font-weight: 600;
		color: var(--sl-color-white);
	}
</style>